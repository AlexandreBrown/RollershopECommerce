{% extends 'base/base.html.twig' %}
{% block content %}
{% set listeSouhaits = app.session.get('listeSouhaits') %} <!-- On récupère notre variable de session listeSouhaits -->
{% set panier = app.session.get('panier') %} <!-- On récupère notre variable de session panier -->
<!-- start section -->
<section class="section white-backgorund">
    <div class="container">
        <div class="row">
        	{% if app.user %}
            <!-- start sidebar -->
            <div class="col-sm-2">
                <div class="widget all-ArroundBorder">
                    <h5 class="subtitle text-center">Navigation</h5>
                    
                    <ul class="list list-unstyled ">
                        <li class="spacerPad10-no-top-bottom">
                            <a href="{{ path('dossier') }}">Mon compte</a>
                        </li>
                        <li class="active spacerPad10-no-top-bottom">
                            <a href="{{ path('panier.index') }}">Mon panier <span class="text-primary">({{panier.compteNbProduitsTotal}})</span></a>
                        </li>
                        <li class="spacerPad10-no-top-bottom">
                            <a href="{{ path('error404') }}">Mes commandes</a>
                        </li>
                        <li class="spacerPad10-no-top-bottom">
                            <a href="{{ path('listeSouhaits.index') }}">Liste de souhaits <span class="text-primary">({% if listeSouhaits is not null %}{{listeSouhaits.compteSouhaits}}{% else %}0{% endif %})</span></a>
                        </li>
                        <li class="spacerPad10-no-top">
                            <a href="{{ path('deconnexion') }}">Déconnexion</a>
                        </li>
                    </ul>
                </div><!-- end widget --> 
            </div><!-- end col -->
            <div class="col-sm-10">
        	{% else %}
        	<div class="col-sm-12">
        	{% endif %}
            <!-- end sidebar -->
                <div class="row">
                    <div class="col-sm-12 text-left">
                        <h2 class="title">Paiement</h2>
                    </div><!-- end col -->
                </div><!-- end row -->
                
                <hr class="spacer-5"><hr class="spacer-20 no-border">

                <div class="UBorder">
                <div class="row">
                    <div class="col-sm-12">
                        <ul class="nav nav-pills style2 nav-justified">
                            <li class="active">
                                <a href="#payment" data-toggle="tab">
                                    1. Méthode de paiement
                                    <div class="icon">
                                        <i class="fa fa-credit-card"></i>
                                    </div>
                                </a>
                            </li>
                            <li class="disabled">
                            	<a href="#">
                                    2. Revue de la commande
                                    <div class="icon">
                                        <i class="fa fa-check"></i>
                                    </div>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content pills">
                        	<div class="tab-pane active" id="payment">
                                <div class="row spacerPad20">
                                    <div class="col-md-8">
                                        <h5 class="thin subtitle">Méthode de paiement</h5>
                                        <div class="panel-group accordion style2" id="accordionPayment" role="tablist" aria-multiselectable="true">
                                            <div class="panel panel-default">
                                                <div class="panel-heading" role="tab" id="headingPayment1">
                                                    <h4 class="panel-title">
                                                        <a class="" data-toggle="collapse" data-parent="#accordionPayment" href="#collapsePayment1" aria-expanded="true" aria-controls="collapsePayment1">
                                                            <i class="fa fa-credit-card mr-10"></i>Credit or Debit Card
                                                        </a>
                                                    </h4><!-- end panel-title -->
                                                </div><!-- end panel-heading -->
                                                <div id="collapsePayment1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingPayment1">
                                                    <div class="panel-body">
                                                        <div class="form-group">
                                                            <div class="row">
                                                                <label class="col-sm-4">Cardholder Name <span class="text-danger">*</span></label>
                                                                <div class="col-sm-8">
                                                                    <input type="text" class="form-control required" name="cardholder" placeholder="">
                                                                </div><!-- end col -->
                                                            </div><!-- end row -->
                                                        </div><!-- end form-group -->
                                                        <div class="form-group">
                                                            <div class="row">
                                                                <label class="col-sm-4">Card Number <span class="text-danger">*</span></label>
                                                                <div class="col-sm-8">
                                                                    <input type="text" class="form-control required" name="cardnumber" placeholder="">
                                                                </div><!-- end col -->
                                                            </div><!-- end row -->
                                                        </div><!-- end form-group -->
                                                        <div class="form-group">
                                                            <div class="row">
                                                                <label class="col-sm-4">Payment Types <span class="text-danger">*</span></label>
                                                                <div class="col-sm-8">
                                                                    <ul class="list list-inline">
                                                                        <li><i class="fa fa-cc-visa fa-2x"></i></li>
                                                                        <li><i class="fa fa-cc-paypal fa-2x"></i></li>
                                                                        <li class="text-primary"><i class="fa fa-cc-mastercard fa-2x"></i></li>
                                                                        <li><i class="fa fa-cc-discover fa-2x"></i></li>
                                                                    </ul>
                                                                </div><!-- end col -->
                                                            </div><!-- end row -->
                                                        </div><!-- end form-group -->
                                                        <div class="form-group">
                                                            <div class="row">
                                                                <label class="col-sm-4">Expiration Date <span class="text-danger">*</span></label>
                                                                <div class="col-sm-8">
                                                                    <div class="row">
                                                                        <div class="col-sm-6">
                                                                            <input type="text" name="mm" placeholder="MM" class="form-control required">
                                                                        </div><!-- end col -->
                                                                        <div class="col-sm-6">
                                                                            <input type="text" name="yy" placeholder="YY" class="form-control required">
                                                                        </div><!-- end col -->
                                                                    </div><!-- end row -->      
                                                                </div><!-- end col -->
                                                            </div><!-- end row -->
                                                        </div><!-- end form-group -->
                                                        <div class="form-group">
                                                            <div class="row">
                                                                <label class="col-sm-4">CSC <span class="text-danger">*</span></label>
                                                            </div><!-- end row -->
                                                        </div><!-- end form-group -->
                                                    </div><!-- end panel-body -->
                                                </div><!-- end collapse -->
                                            </div><!-- end panel -->
                                        </div><!-- end panel-group -->
                                    </div><!-- end col -->
                                    	<div class="col-sm-4">
				                        	<div class="table-responsive table-bordered"> 
				                            <table class="table no-border">
				                                <thead class="summaryCart">
				                                    <tr>
				                                        <td colspan="2">
				                                            <h5>Sommaire de la commande</h5>
				                                        </td>
				                                    </tr>
				                                </thead>
				                                <tr>
				                                    <th>Sous-total</th><td class="pull-right">123$</td>
				                                </tr>
				                                <tr>
				                                    <th>Frais de livraison</th><td class="pull-right">123$</td>
				                                </tr>
				                                <tr>
				                                    <th>TPS</th><td class="pull-right">123$</td>
				                                </tr>
				                                <tr>
				                                    <th>TVQ</th><td class="pull-right">123$</td>
				                                </tr>
				                                <tr>
				                                    <tbody></tbody>
				                                </tr>
				                                <tr>
				                                    <th>Total</th><td class="pull-right">123$</td>
				                                </tr>
				                            </table><!-- end table -->
				                        </div><!-- end table-responsive -->
				                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end tab-pane -->
                        </div><!-- end pills content -->
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end col -->
	        <div class="row spacerPad10-no-top">
	        	<hr>
	        	<div class="col-sm-6 text-left">
	        		<a href="{{path('panier.index')}}" class="btn btn-default btn-md round">Retour au panier</a>
	        	</div>
	        	<div class="col-sm-6 text-right">
	        		<button type="submit" class="btn btn-default btn-md round">Revoir la commande</button>
	        	</div>
	        </div>  
          </div><!-- end UBorder -->
        </div><!-- end row -->          
    </div><!-- end container -->
</section>
<!-- end section -->
{% endblock %}