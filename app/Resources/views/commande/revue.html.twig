{% extends 'base/base.html.twig' %}
{% block content %}
{% set listeSouhaits = app.session.get('listeSouhaits') %} <!-- On récupère notre variable de session listeSouhaits -->
{% set panier = app.session.get('panier') %} <!-- On récupère notre variable de session panier -->
<!-- start section -->
<section class="section white-backgorund">
    <div class="container">
        <div class="row">
            {% if app.user %}
            <!-- start sidebar -->
            <div class="col-sm-2">
                <div class="widget all-ArroundBorder">
                    <h5 class="subtitle text-center">Navigation</h5>
                    
                    <ul class="list list-unstyled ">
                        <li class="spacerPad10-no-top-bottom">
                            <a href="{{ path('dossier') }}">Mon compte</a>
                        </li>
                        <li class="active spacerPad10-no-top-bottom">
                            <a href="{{ path('panier.index') }}">Mon panier <span class="text-primary">({{panier.compteNbProduitsTotal}})</span></a>
                        </li>
                        <li class="spacerPad10-no-top-bottom">
                            <a href="{{ path('error404') }}">Mes commandes</a>
                        </li>
                        <li class="spacerPad10-no-top-bottom">
                            <a href="{{ path('listeSouhaits.index') }}">Liste de souhaits <span class="text-primary">({% if listeSouhaits is not null %}{{listeSouhaits.compteSouhaits}}{% else %}0{% endif %})</span></a>
                        </li>
                        <li class="spacerPad10-no-top">
                            <a href="{{ path('deconnexion') }}">Déconnexion</a>
                        </li>
                    </ul>
                </div><!-- end widget --> 
            </div><!-- end col -->
            <div class="col-sm-10">
            {% else %}
            <div class="col-sm-12">
            {% endif %}

            <!-- end sidebar -->
                <div class="row">
                    <div class="col-sm-12 text-left">
                        <h2 class="title">Paiement</h2>
                    </div><!-- end col -->
                </div><!-- end row -->
                
                <hr class="spacer-5"><hr class="spacer-20 no-border">
                <div class="UBorder">
                <div class="row">
                    <div class="col-sm-12">
                        <ul class="nav nav-pills style2 nav-justified">
                            <li>
                                <a href="{{path('paiement')}}">
                                    1. Méthode de paiement
                                    <div class="icon">
                                        <i class="fa fa-credit-card"></i>
                                    </div>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#shopping-cart" data-toggle="tab">
                                    2. Revue de la commande
									<div class="icon">
                                        <i class="fa fa-check"></i>
                                    </div>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content pills">
                            <div class="tab-pane active" id="shopping-cart">
                                <div class="table-responsive col-sm-8">    
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th colspan="2">Products</th>
                                                <th>Price</th>
                                                <th>Quantity</th>
                                                <th colspan="2">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <a href="javascript:void(0);">
                                                        <img width="60px" src="img/products/men_06.jpg" alt="product">
                                                    </a>
                                                </td>
                                                <td>
                                                    <h6 class="regular"><a href="javascript:void(0);">Lorem Ipsum</a></h6>
                                                    <p>Sed aliquam tincidunt tempus</p>
                                                </td>
                                                <td>
                                                    <span>$59.99</span>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="select">
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <span class="text-primary">$59.99</span>
                                                </td>
                                                <td>
                                                    <button type="button" class="close">×</button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <a href="javascript:void(0);">
                                                        <img width="60px" src="img/products/shoes_01.jpg" alt="product">
                                                    </a>
                                                </td>
                                                <td>
                                                    <h6 class="regular"><a href="javascript:void(0);">Lorem Ipsum</a></h6>
                                                    <p>Sed aliquam tincidunt tempus</p>
                                                </td>
                                                <td>
                                                    <span>$39.99</span>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="select">
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <span class="text-primary">$39.99</span>
                                                </td>
                                                <td>
                                                    <button type="button" class="close">×</button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <a href="javascript:void(0);">
                                                        <img width="60px" src="img/products/bags_07.jpg" alt="product">
                                                    </a>
                                                </td>
                                                <td>
                                                    <h6 class="regular"><a href="javascript:void(0);">Lorem Ipsum</a></h6>
                                                    <p>Sed aliquam tincidunt tempus</p>
                                                </td>
                                                <td>
                                                    <span>$29.99</span>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="select">
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <span class="text-primary">$29.99</span>
                                                </td>
                                                <td>
                                                    <button type="button" class="close">×</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table><!-- end table -->
                                </div><!-- end table-responsive -->
                                    <div class="col-sm-4">
                                        <div class="table-responsive table-bordered"> 
                                            <table class="table no-border">
                                                <thead class="summaryCart">
                                                    <tr>
                                                        <td colspan="2">
                                                            <h5>Sommaire de la commande</h5>
                                                        </td>
                                                    </tr>
                                                </thead>
                                                <tr>
                                                    <th>Sous-total</th><td class="pull-right">{{ panier.calculSousTotal() | number_format(2, ",", " ") }}$</td>
                                                </tr>
                                                <tr>
                                                    <th>Frais de livraison</th><td class="pull-right">{{ panier.calculFraisLivraison() | number_format(2, ",", " ") }}$</td>
                                                </tr>
                                                <tr>
                                                    <th>TPS</th><td class="pull-right">{{ panier.calculTPS() | number_format(2, ",", " ") }}$</td>
                                                </tr>
                                                <tr>
                                                    <th>TVQ</th><td class="pull-right">{{ panier.calculTVQ() | number_format(2, ",", " ") }}$</td>
                                                </tr>
                                                <tr>
                                                    <tbody></tbody>
                                                </tr>
                                                <tr>
                                                    <th>Total</th><td class="pull-right">{{ panier.calculTotal() | number_format(2, ",", " ") }}$</td>
                                                </tr>
                                            </table><!-- end table -->
                                        </div><!-- end table-responsive -->
                                    </div><!-- end col -->
                            </div><!-- end tab-pane -->
                        </div><!-- end pills content -->
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end col -->
            <div class="row spacerPad10-no-top">
                <hr>
                <div class="col-sm-6 text-left">
                    <a href="{{path('panier.index')}}" class="btn btn-default btn-md round">Retour au panier</a>
                </div>
                <div class="col-sm-6 text-right">
                    <button id="btnSubmitCommande" name="action" value="submitCommande" type="submit" class="btn btn-default btn-md round">Placer la commande</button>
                </div>
            </div>  
            </div><!-- end UBorder -->
        </div><!-- end row -->                
    </div><!-- end container -->
</section>
<!-- end section -->
{% endblock %}